{{> welcome from='Products' to='List'}}
{{> notifications}}
<div></div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Products management</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form action="" method="get">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Care</label>
                                <select class="form-control" name="care">
                                    <option>All</option>
                                    <option>Hand Wash Only</option>
                                    <option>Machine Wash</option>
                                </select>
                            </div>
                            <div class="col-sm-2 mt-2 mt-sm-0">
                                <label>Color</label>
                                <select class="form-control" name="color">
                                    <option>All</option>
                                    {{#each colors}}<option>{{this}}</option>{{/each}}
                                </select>
                            </div>
                            <div class="col-sm-2 mt-2 mt-sm-0">
                                <label>Brand</label>
                                <select class="form-control" name="brand">
                                    <option>All</option>
                                    {{#each brands}}<option>{{this}}</option>{{/each}}
                                </select>
                            </div>
                            <div class="col-sm-2 mt-2 mt-sm-0">
                                <label>Material</label>
                                <select class="form-control" name="material">
                                    <option>All</option>
                                    {{#each materials}}<option>{{this}}</option>{{/each}}
                                </select>
                            </div>
                            <div class="col-sm-2 mt-2 mt-sm-0">
                                <button type="submit" class="btn btn-primary mt-3">Filter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table header-border table-hover verticle-middle" style="min-width: 845px">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Brand</th>
                                <th>Color</th>
                                <th>Material</th>
                                <th>Size</th>
                                <th>Care</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody style="color: black;">
                            {{#each products}}
                            <tr>
                                <td><img width="50" height="50" src={{image}}></td>
                                <td style="max-width: 150px;">{{name}}</td>
                                <td>{{price}}</td>
                                <td>{{brand}}</td>
                                <td>{{color}}</td>
                                <td
                                    style="max-width: 100px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
                                    {{material}}</td>
                                <td>{{size}}</td>
                                <td>{{care}}</td>
                                <td
                                    style="max-width: 100px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
                                    {{description}}</td>
                                <td style="max-width: fit-content;">
                                    <div class="d-sm-flex justify-content-between">
                                        <div></div>
                                        <div>
                                            <a href="/products/{{id}}/edit?page={{../page}}">
                                                <button type="button" class="btn btn-outline-primary">Edit</button>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" data-toggle="modal"
                                                data-target="#basicModal{{id}}">Delete</button>

                                            {{!-- Confirmation modal --}}
                                            <div class="modal fade" id="basicModal{{id}}" style="display: none;"
                                                aria-hidden="true">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Confirmation</h5>
                                                            <button type="button" class="close"
                                                                data-dismiss="modal"><span>Ã—</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">Are you sure you want to delete this?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-dismiss="modal">Cancel</button>
                                                            <form
                                                                action="/products/{{id}}?_method=DELETE&page={{../page}}"
                                                                method="post">
                                                                <button type="submit"
                                                                    class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {{!-- modal ends --}}

                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                    {{> pagination}}
                </div>
            </div>
        </div>
    </div>
</div>