<div class="row">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Order information</h4>
            </div>
            <div class="card-body">
                {{#with order}}
                <div class="row mb-4">
                    <div class="col-5">
                        <h5 class="f-w-500">Ordered date <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-7"><span>{{date}}</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-5">
                        <h5 class="f-w-500">Status <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-7"><span>{{status}}</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-5">
                        <h5 class="f-w-500">Payment Type <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-7"><span>{{paymentType}}</span>
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Customer information</h4>
            </div>
            <div class="card-body">
                {{#with customer}}
                        {{!-- <div class="row mb-4">
                            <div class="col-3">
                                <h5 class="f-w-500">Name <span class="pull-right">:</span>
                                </h5>
                            </div>
                            <div class="col-9"><span>{{firstName}} {{lastName}}</span>
                            </div>
                        </div> --}}
                        <div class="row mb-4">
                            <div class="col-3">
                                <h5 class="f-w-500">Username <span class="pull-right">:</span>
                                </h5>
                            </div>
                            <div class="col-9"><span>{{username}}</span>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-3">
                                <h5 class="f-w-500">Email <span class="pull-right">:</span>
                                </h5>
                            </div>
                            <div class="col-9"><span>{{email}}</span>
                            </div>
                        </div>
                        {{!-- <div class="row mb-4">
                            <div class="col-3">
                                <h5 class="f-w-500">Phone <span class="pull-right">:</span>
                                </h5>
                            </div>
                            <div class="col-9"><span>{{phone}}</span>
                            </div>
                        </div> --}}
                {{/with}}
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Product ordered</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                {{!-- <th>Size</th> --}}
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>

                            {{#each products}}
                            <tr>
                                <td>
                                    <div class="round-img">
                                        <a href=""><img src="{{image.[0]}}" alt="" width="35"></a>
                                    </div>
                                </td>
                                <td>{{name}}</td>
                                {{!-- <td><span>{{size}}</span></td> --}}
                                <td><span>{{quantity}}</span></td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>